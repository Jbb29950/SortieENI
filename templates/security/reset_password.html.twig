{% extends 'base.html.twig' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/reinitialisation-mdp.css') }}">{% endblock %}

{% block title %}
Réinitialisation du mot de passe
{% endblock %}

{% block body %}
        <section class="Reinitialisation-mdp">
            <div class="row">
                <div class="col">
                    <h1 id="mdp-init">Réinitialisation du mot de passe.</h1>
                    {{ form_start(passForm) }}
                    {{ form_row(passForm.password) }}
                    <button type="submit" class="btn" id="valid-init">Envoyer</button>
                    {{ form_end(passForm) }}
                </div>
            </div>
        </section>
{% endblock %}



