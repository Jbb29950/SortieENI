{% extends 'base.html.twig' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/profile.css') }}">{% endblock %}
{% block title %}Modification profil{% endblock %}
{% block body %}


    <section class="container_profil">
        <h1 class="titre_profil">Votre profil</h1>
               {% if app.user %}
                   <div class="profil">
                       <h2>Votre photo de profil : <img src=" {{ app.user.photoProfil }}"/></h2>
                   <h2>Votre nom : {{ app.user.nom }}</h2>
                   <h2>Votre pr√©nom : {{ app.user.prenom}}</h2>
                   <h2>Votre telephone : {{ app.user.telephone }}</h2>
                   <h2>Votre email : {{ app.user.email }}</h2>
                   <h2>Votre campus : {{ app.user.campus.nom }}</h2>
                       {% if app.user.pseudo %}
