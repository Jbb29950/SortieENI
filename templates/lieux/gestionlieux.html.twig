{% extends 'base.html.twig' %}
{% block title %}Gestion Ville{% endblock %}
{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/lieu.css') }}"
{% endblock %}
{% block javascripts %}{% endblock %}
{% block body %}

    <h1>GÃ©rer les lieux</h1>
    <body>
    <h2>Filtrer les lieux</h2>
    <div>
        <form name="nom">
            <label for="nom">  </label>
            <input type="text" id="nom" name="nom">
            <button type="submit" name="nom">Rechercher</button>
        </form>
    </div>
    <table class="table-lieux">
        <thead>
        <tr>
            <th scope="col">Lieu</th>
            <th scope="col" class="col_2">Rue</th>
            <th scope="col">Latitude</th>
            <th scope="col">Longitude</th>
            <th scope="col">Code postal</th>
            <th scope="col">Ville</th>
        </tr>
        </thead>
        <tbody>
        {% for lieu in lieux %}
            <tr>
                <td class="col">{{ lieu.nom }}</td>
                <td class="col">{{ lieu.rue }}</td>
                <td class="col">{{ lieu.latitude }}</td>
                <td class="col">{{ lieu.longitude }}</td>
                <td class="col">{{ lieu.ville.codePostal }}</td>
                <td class="col">{{ lieu.ville.nom }}</td>
                <td>
                    <button class="btn btn-link">Modifier</button>
                </td>
            </tr>
        {% endfor %}
        {{ form_start(form) }}
        <tr>
            <td class="col">{{ form_row(form.nom) }}</td>
            <td class="col">{{ form_row((form.rue)) }}</td>
            <td class="col">{{ form_row((form.latitude)) }}</td>
            <td class="col">{{ form_row((form.longitude)) }}</td>
            <td></td>
            <td class="col">{{ form_row((form.ville)) }}</td>

            <td><button type="submit" class="btn btn-link">Ajouter</button></td>
        </tr>
        {{ form_end(form) }}
        </tbody>
    </table>

    </body>
{% endblock %}