{% extends 'base.html.twig' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/sortie.css') }}">{% endblock %}
{% block title %}


    Créer une sortie | {{ parent() }}


{% endblock %}


{% block body %}

    <div class="titre_creation">
        <h2>Créer une sortie</h2>
    </div>

    <div class="formulaire_creation">
        {{ form_start(creerSortieForm) }}
        {{ form_row(creerSortieForm.nom) }}
        {{ form_row(creerSortieForm.dateHeureDebut) }}
        {{ form_row(creerSortieForm.duree) }}
        {{ form_row(creerSortieForm.dateLimiteInscription) }}
        {{ form_row(creerSortieForm.nbInscriptionsMax) }}
        {{ form_row(creerSortieForm.infosSortie) }}
        {% if etat is defined %}
            {{ form_row(creerSortieForm.etat, {'choices': { 'ouvert': 'Ouvert', 'en_creation': 'En création'}}) }}
        {% else %}
            {{ form_row(creerSortieForm.etat) }}
        {% endif %}
        {{ form_row(creerSortieForm.lieu) }}
        {{ form_row((creerSortieForm.campus)) }}
    </div>

    <div class="bouton_valider">

        <button type="submit" class="btn">Publier la sortie</button>
        <button type="submit" class="btn">Enregistrer</button>
    </div>


    {{ form_end(creerSortieForm) }}


{% endblock %}


